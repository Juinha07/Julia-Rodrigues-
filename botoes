    <script>
        function clicar(botao){
            var a = window.document.getElementById(botao)
            a.style.background='red'
            object.style.textAlign = "center"
        }
        function entrar(botao){
            var e = window.document.getElementById(botao)
            e.style.background='red'
        }
        function sair(botao){
            var s = window.document.getElementById(botao)
            s.style.background='white'
        }
